
@model ShoppingCart

<form method="post">
    <input hidden asp-for="@Model.ProductId" />
    <div class="card  container pt-1">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">@Model.Product.Title</h1>
                <p class="text-warning">by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-secondary pt-2" style="height:30px;">@Model.Product.CoverType.Name</span>
                <span class="badge bg-success pt-2" style="height:30px;">@Model.Product.Category.Name</span>
            </div>
        </div>
        <div class="card-body  ">
            <div class=" p-2">
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-1  ">

                        <div class="row ps-2">
                            <h5 class="text-muted">ISBN : @Model.Product.ISBN</h5>
                        </div>
                        <div class="row ps-2">
                            <h5 class="text-muted pb-2">List Price: <strike style="color:maroon;">@Model.Product.ListPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom ">
                                <div> Quantity</div>
                                </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom ">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom ">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white border-bottom ">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                            <div class="p-1 col-3 col-lg-2 bg-white  fw-bold ">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white  fw-bold ">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white  fw-bold ">
                                <div>@Model.Product.Price50.ToString("c")</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white  fw-bold ">
                                <div>@Model.Product.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary">@Html.Raw(Model.Product.Description)</p>
                        </div>
                        <div class="col-md-4">
                        <div class="row pl-2 input-group ">
                            <span class="col-2 input-group-text border-0 fw-semibold text-primary">Count</span>
                            <div class="col-10"><input asp-for="Count" min="1" max="100" class="form-control" /></div>
                       
                        </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <button class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</button>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart"  class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>